<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <LinearLayout
        android:id="@+id/layoutStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="@color/dark_background"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:text="PERFORMIC"
            android:textSize="48sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Mobile Performance Suite"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="16dp"
            app:strokeColor="#333333"
            app:strokeWidth="1dp"
            android:layout_marginBottom="32dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/textDeviceName"
                    android:text="DEVICE MODEL"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStart"
            android:text="START BENCHMARK"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingVertical="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="12dp"
            app:backgroundTint="#00E5FF"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/dark_background"
        android:clickable="true"
        android:focusable="true">
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:indicatorSize="60dp"
            app:trackThickness="6dp"
            app:indicatorColor="#00E5FF"
            app:trackColor="#333333"/>
        <TextView
            android:id="@+id/textProgressStatus"
            android:text="Running tests..."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/layoutResults"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/dark_background"
        android:fillViewport="true"
        android:clickable="true"
        android:focusable="true"
        android:clipToPadding="false"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="BENCHMARK REPORT"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1E1E1E"
                app:cardCornerRadius="16dp"
                app:strokeColor="#333333"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView android:text="CPU SCORES" android:textStyle="bold" android:textColor="#00E5FF" android:textSize="14sp" android:layout_marginBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
                        <TextView android:text="Single-Core" android:textColor="#AAAAAA" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <TextView android:id="@+id/resCpuSingle" android:text="0" android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <com.google.android.material.progressindicator.LinearProgressIndicator android:id="@+id/progCpuSingle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:trackThickness="6dp" app:indicatorColor="#00E5FF" app:trackColor="#333333" app:trackCornerRadius="4dp"/>

                    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
                        <TextView android:text="Multi-Core" android:textColor="#AAAAAA" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <TextView android:id="@+id/resCpuMulti" android:text="0" android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <com.google.android.material.progressindicator.LinearProgressIndicator android:id="@+id/progCpuMulti" android:layout_width="match_parent" android:layout_height="wrap_content" app:trackThickness="6dp" app:indicatorColor="#AA00FF" app:trackColor="#333333" app:trackCornerRadius="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1E1E1E"
                app:cardCornerRadius="16dp"
                app:strokeColor="#333333"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView android:text="MEMORY &amp; CACHE" android:textStyle="bold" android:textColor="#00E676" android:textSize="14sp" android:layout_marginBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical">
                            <TextView android:text="RAM Score" android:textColor="#888" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/resMemScore" android:text="0" android:textSize="18sp" android:textStyle="bold" android:textColor="#FFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical">
                            <TextView android:text="RAM Bandwidth" android:textColor="#888" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/resMemBandwidth" android:text="0 GB/s" android:textSize="18sp" android:textStyle="bold" android:textColor="#FFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical">
                            <TextView android:text="L1 Cache" android:textColor="#888" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/resL1" android:text="0 GB/s" android:textSize="16sp" android:textStyle="bold" android:textColor="#CCC" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical">
                            <TextView android:text="L2 Cache" android:textColor="#888" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/resL2" android:text="0 GB/s" android:textSize="16sp" android:textStyle="bold" android:textColor="#CCC" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1E1E1E"
                app:cardCornerRadius="16dp"
                app:strokeColor="#FF5252"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView android:text="GPU 3D RENDER" android:textStyle="bold" android:textColor="#FF5252" android:textSize="14sp" android:layout_marginBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/resGpuScore" android:text="0" android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="32sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <com.google.android.material.progressindicator.LinearProgressIndicator android:id="@+id/progGpu" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:trackThickness="8dp" app:indicatorColor="#FF5252" app:trackColor="#333333" app:trackCornerRadius="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1E1E1E"
                app:cardCornerRadius="16dp"
                app:strokeColor="#333333"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView android:text="STABILITY ANALYSIS" android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="14sp" android:layout_marginBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    <TextView android:text="CPU Jitter" android:textColor="#666" android:textSize="12sp" android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartCpu"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginBottom="24dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView android:text="Start" android:textColor="#666" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/resTempStart" android:text="0°" android:textColor="#FFF" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView android:text="Peak" android:textColor="#666" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/resTempPeak" android:text="0°" android:textColor="#FF5252" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView android:text="Rise" android:textColor="#666" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/resTempRise" android:text="+0°" android:textColor="#FF5252" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView android:text="Thermals" android:textColor="#666" android:textSize="12sp" android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartThermal"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonClose"
                android:text="CLOSE REPORT"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"
                app:backgroundTint="#FFFFFF"
                android:paddingVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="12dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutGpuRender"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#0000FF"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E1E1E"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">
        <TextView
            android:text="GPU STRESS TEST"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textLiveFps"
            android:text="FPS: --"
            android:textColor="#00E5FF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

        <SurfaceView
            android:id="@+id/surfaceViewGpu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</FrameLayout>